{
        // Use IntelliSense to learn about possible attributes.
        // Hover to view descriptions of existing attributes.
        // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
        "version": "0.2.0",
        "configurations": [

                {
                        "type": "node",
                        "request": "launch",
                        "name": "Launch Program (TSC Build & Run)",
                        "skipFiles": [
                                "<node_internals>/**"
                        ],
                        "program": "${workspaceFolder}/dist/server.js",
                        "preLaunchTask": "npm: build",
                        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
                        "env": {
                                "DEBUG": "true" // Example environment variable for debugging if needed
                        }
                },
                {
                        "type": "chrome",
                        "request": "launch",
                        "name": "Launch Client in Chrome",
                        "url": "http://localhost:3000",
                        "webRoot": "${workspaceFolder}/www"
                },
                {
                        "type": "node",
                        "request": "launch",
                        "name": "Launch Program (Nodemon Dev)",
                        "skipFiles": [
                                "<node_internals>/**"
                        ],
                        "runtimeExecutable": "nodemon",
                        "program": "${workspaceFolder}/dist/server.js",
                        "restart": true,
                        "console": "integratedTerminal",
                        "internalConsoleOptions": "neverOpen",
                        "outFiles": [
                                "${workspaceFolder}/dist/**/*.js"
                        ],
                        "env": {
                                "DEBUG": "true"
                        }
                }
        ],
        "compounds": [{
                "name": "Launch Server (Dev) & Web Client",
                "configurations": ["Launch Program (Nodemon Dev)", "Launch Client in Chrome"],
                "stopAll": true
        }]
}